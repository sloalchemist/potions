{
    "name": "@rt-potion/converse",
    "version": "1.0.0",
    "main": "dist/src/library/index.js",
    "types": "dist/src/library/index.d.ts",
    "bin": {
        "my-repl": "./dist/src/repl/index.js"
    },
    "scripts": {
        "build": "pnpm tsc",
        "build:db": "pnpm build && node dist/src/repl/test_data/buildMobKnowledge.js",
        "start:repl": "node dist/src/repl/index.js",
        "lint": "pnpm eslint src/",
        "format": "pnpm prettier --config ../../.prettierrc 'src/**/*.ts' --write",
        "test": "pnpm jest --silent",
        "test:coverage": "pnpm test -- --coverage=true --coverage-directory=../../build/logs",
        "dev": "pnpm build && node dist/src/repl/index.js",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "@rt-potion/converse": "file:",
        "@types/node": "^20.0.0",
        "better-sqlite3": "^11.5.0",
        "dotenv": "^16.4.7",
        "uuid": "^11.0.3"
    },
    "devDependencies": {
        "@types/better-sqlite3": "^7.6.12",
        "@types/jest": "^29.5.14",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.18.1",
        "@typescript-eslint/parser": "^8.18.1",
        "eslint": "^9.17.0",
        "husky": "^9.1.7",
        "jest": "^29.0.0",
        "prettier": "^3.4.2",
        "rimraf": "^5.0.0",
        "typescript": "^5.0.0"
    }
}
