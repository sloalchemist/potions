{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2019"],
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "test/*.test.ts"],
  "exclude": ["node_modules"]
}
